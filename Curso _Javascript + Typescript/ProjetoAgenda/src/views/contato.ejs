<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">

  <div class="row">

    <div class="col-lg-2">

    </div>

    <div class="col-lg-8 my-3">

      <h1 class="display-1 text-center">Contato</h1>
      <p class="text-center lead">Adicione ou remova seus contatos</p>

      <& include('includes/messages') %>

      <form action="/contato/register" method="POST"> 

        <input type="hidden" name="_csrf" value=<%= csrfToken %>>

        <div class="form-group">
          <label>Nome</label>
          <input type="text" name="nome" class="form-control" placeholder="nome@examplo.com">
        </div>

        <div class="form-group">
            <label>Sobrenome</label>
            <input type="text" name="sobrenome" class="form-control" placeholder="nome@examplo.com">
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" class="form-control" placeholder="nome@examplo.com">
        </div>

        <div class="form-group">
            <label>Numero</label>
            <input type="tel" name="numero" class="form-control" placeholder="nome@examplo.com">
        </div>

        <button class="btn btn-primary my-3" type="submit">Salvar</button>
      </form>

    </div>

    <div class="col-lg-2">

    </div>

  </div>

</div>



<%- include('includes/footer') %>